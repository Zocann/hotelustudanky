@using Studanka.Controllers

@inject IStringLocalizer<Resource> Localizer;
@inject DataService DataService;

@*Regular app bar*@
<div class="AppBar AppBarRegular d-none d-lg-flex">

    <div style="left: 0; width: 22%; position: absolute; height: 100%;">
        <button class="ButtonReservation">
            <img class="AppBarCalendar" src="Icons/IconPromotion.svg"/>
            <text class="AppBarText">@Localizer["Promotion"]</text>
        </button>
    </div>

    <div style="right: 17%; width: 20%; position: absolute; height: 100%;">
        <button class="ButtonReservation">
            <img class="AppBarCalendar" src="Icons/IconCalendar.svg"/>
            <text class="AppBarText">@Localizer["Reservation"]</text>
        </button>
    </div>
    
    <div style="display: flex; right: 0; width: 17%; position: absolute; height: 100%">
        <div style="flex: 1; display: flex" id="DivLogo" class="ButtonDiv">
            <button style="background-color: transparent; flex: 1;" onclick = "window.location.href = '/'">
                <img src="Logos/LogoBlackNoText.png" id="ButtonLogoRegular" alt="LogoWhite"/>
            </button>
        </div>
        
        <div style="flex: 1; display: flex;" id="DivOptions" class="ButtonDiv">
            
            <button style="background-color: transparent; flex: 1;" id="ButtonBars" @onclick="OpenDrawer">
                <img src="Icons/IconBarsBlack.svg" id="IconBarsRegular" alt="IconWhiteBars"/>
            </button>
            
        </div>
    </div>
</div>


@*Mobile app bar*@
<div class="AppBar AppBarMobile d-flex d-lg-none" style="bottom: 0">
    
    <div style="flex: 1;">
        <button class="ButtonReservationMobile">@Localizer["Reservation"]</button>
    </div>

    <div style="flex: 1.7; display: flex; margin-left: 1vw;">

        <div style="flex: 1; display: flex" id="DivLogoMobile" class="ButtonDivMobile">
            <button style="background-color: transparent; flex: 1;" onclick="window.location.href = '/'">
                <img src="Logos/LogoBlackNoText.png" id="ButtonLogoMobile" alt="LogoWhiteMobile"/>
            </button>
        </div>

        <div style="flex: 1;" class="ButtonDivMobile">
            <button style="background-color: transparent; flex: 1; width: 100%; height: 100%">
                <img src="Icons/IconPromotion.svg" class="IconBarsMobile"/>
            </button>
        </div>

        <div style="flex: 1; display: flex" id="DivOptionsMobile" class="ButtonDivMobile">
            <button style="background-color: transparent; flex: 1;" @onclick="OpenDrawer">
                <img src="Icons/IconBarsBlack.svg" class="IconBarsMobile" alt="IconBarsMobile"/>
            </button>

        </div>
    </div>
</div>


@code {

    private void OpenDrawer()
    {
        DataService.SharedOpenDrawer = true;
    }
}